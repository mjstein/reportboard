%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      body {
        background-color: floralwhite ;
      }
      ul {
        display: block;
        list-style-type: disc;
        margin-top: 1em;
        margin-bottom: 1 em;
        margin-left: 0;
        margin-right: 0;
        padding-left: 40px;
      }
      h1 {
        color: midnightblue;
        letter-spacing: 2px;
        font-family: "Times New Roman";
        text-decoration: underline;
      }
      
      h2 {
        color: midnightblue;
        letter-spacing: 2px;
        font-family: "Times New Roman";
      }
      
      h3 {
        color: darkslateblue;
        letter-spacing: 2px;
        font-family: "Times New Roman";
        text-shadow: 1px 1px 2px #555;
      }
      p {
        color: darkslateblue;
        letter-spacing: 2px;
        font-family: "Times New Roman";
      }
      
      #blogp{
        color: darkslateblue;
        font-size:110%;
        font-family: "Times New Roman";
        font-style: italic;
        padding: 0 50px;
        margin: 50px auto;
      }
      
      article {
        min-width: 300px;
        max-width: 700px;
      }
  %body
